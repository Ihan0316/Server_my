<?xml version="1.0" encoding="UTF-8" ?>
<!--자바 기반의 로깅 프레임워크-->
<!--    Appenders 설정은 출력 대상을 정의-->
<!--    콘솔, 파일, 데이터베이스 기록가능-->
<!--    PatternLayout 콘솔에 출력하는 메세지 형식 포멧-->
<!--    %d{HH:mm:ss.SSS} - 시간 분 초 기록-->
<!--    [%t] - 스레드에 동작. 예시)[main]-->
<!--    %-5level - 로그래벨 표기, 5글자 왼쪽정렬 예시)[ INFO]-->
<!--    %logger{36} - 패키지 명을 기록-->
<!--    %msg - 출력 메세지를 기록-->
<!--    %n - 줄넘김-->

<Configuration status="WARN">
    <Appenders>
<!--        출력대상 - 콘솔-->
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36}-%msg%n"/>
        </Console>
        <!--        추가부분-->
<!--        출력대상 - 파일-->
        <File name="FileAppender" fileName="logs/error.log">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36}-%msg%n"/>
        </File>
        <!--        추가부분-->
    </Appenders>
    <Loggers>
<!--        추가부분-->
<!--        특정 패키지 명으로 설정도 가능-->
        <Logger name="com.busanit501" level="debug" additivity="false">
            <AppenderRef ref="FileAppender" level="info"/>
            <AppenderRef ref="Console" level="info"/>
        </Logger>
        <!--        추가부분-->
<!--        Root는 전체 설정, INFO이상 단계일때만 로그 출력 설정-->
        <Root level="info">
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>